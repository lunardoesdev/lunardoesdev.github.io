<div class="post-list">
<% for (const item of items) { %>
<article class="post-item">
<div class="post-meta-line">
<% if (item.date) { %><time class="post-date"><%- item.date %></time><% } %>
<% if (item["reading-time"]) { %><span class="meta-sep" aria-hidden="true">Â·</span><span class="post-reading-time"><%- item["reading-time"] %></span><% } %>
</div>
<h2 class="post-title"><a href="<%- item.path %>" class="stretched-link"><%- item.title %></a></h2>
<% if (item.description) { %>
<p class="post-description"><%- item.description %></p>
<% } %>
<% if (item.categories && item.categories.length > 0) { %>
<ul class="post-categories" aria-label="categories">
<% for (const cat of item.categories) { %><li class="post-category"><%- cat %></li>
<% } %>
</ul>
<% } %>
</article>
<% } %>
</div>
